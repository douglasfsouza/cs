@model dgs.Store2.UI.ViewModels.UsuarioAddEditVM
@{
    var id = ViewContext.RouteData.Values["id"]?.ToString();
    ViewBag.Title = id == null ? "Adicionar" : "Editar";
    ViewBag.SubTitle = id == null ? "Adicionar novo usuario" : $"Usuario:  {Model.Nome}";
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" autofocus>
        <span asp-validation-for="Nome" class="inv"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" autofocus>
        <span asp-validation-for="Email" class="inv"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Genero" class="form-label">Genero</label>
        <select asp-for="Genero" asp-items="Model.Generos" class="form-select">
            <option value="">Selecione..</option>
        </select>
        <span asp-validation-for="Genero" class="inv"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PerfisId" class="form-label">Perfis</label>
        <select asp-for="PerfisId" asp-items="Model.Perfis" class="form-select">            
        </select>
        <span asp-validation-for="PerfisId" class="inv"></span>
    </div>

    @if (id == null)
    {
        <div class="row">

            <div class="col mb-3">
                <label asp-for="Senha" class="form-label"></label>
                <input type="password" asp-for="Senha" class="form-control" autofocus>
                <span asp-validation-for="Senha" class="inv"></span>
            </div>

            <div class="col mb-3">
                <label asp-for="ConfSenha" class="form-label">Confirmar Senha</label>
                <input asp-for="ConfSenha" class="form-control" autofocus>
                <span asp-validation-for="ConfSenha" class="inv"></span>
            </div>
        </div>
    }
    else
    {
        <input type="password" asp-for="Senha" class="form-control" value="temp" hidden>
        <input type="password" asp-for="ConfSenha" class="form-control" value="temp" hidden>
    }







    <div>
        <a class="btn btn-outline-warning" asp-action="Index" asp-controller="Usuarios">Voltar</a>
        <button class="btn btn-outline-secondary" type="submit">Salvar</button>
    </div>
</form>

@section scripts{
    <partial name="_ScriptsValidate">

}

