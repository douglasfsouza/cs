<h1>Add Client</h1>

<form method="post" action="/Clients/Save" class="form-control">
    <div class="mb-3">

        <input name="Id" type="number" hidden />
    </div>

    <div class="mb-3">
        <label>Name</label>
        <input name="Name" required />
    </div>

    <div class="mb-3">
        <label>DateOfBirth</label>
        <input name="Dob" required type="date" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/home/clients" class="btn btn-primary" role="button"> Cancel</a>
    </div>
 

</form>