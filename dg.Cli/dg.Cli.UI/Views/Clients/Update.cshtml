
<h1>Update Client</h1>


<form method="post" action="/Clients/Save" class="form-control">
    <div class="mb-3">
        <input name="Id" type="number" value="@Model.Id" hidden />
    </div>

    <div class="mb-3">
        <label>Name</label>
        <input name="Name" required value="@Model.Name" />
    </div>

    <div class="mb-3">
        <label>DateOfBirth</label>
        <input name="Dob" required type="date" value=@Model.Dob.ToString("yyyy-MM-dd") />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/home/clients" class="btn btn-primary" role="button">Cancel </a>

    </div>
    

</form>