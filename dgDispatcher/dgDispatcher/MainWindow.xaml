<Window x:Class="dgDispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dgDispatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblData" Content="Date" HorizontalAlignment="Center" Margin="251,190,0,0" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="#FFEC0202" Height="98" Width="349" MouseDoubleClick="time_click" MouseDown="time_click">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.575"/>
                    <GradientStop Color="White" Offset="0.981"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>

    </Grid>
</Window>
