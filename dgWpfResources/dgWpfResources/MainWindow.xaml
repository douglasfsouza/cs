<Window x:Class="dgWpfResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dgWpfResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="myBrush" Color="Coral"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button x:Name="button" Content="Button" Background="{StaticResource myBrush}"/>
            <TextBlock x:Name="textBlock" Text="Coral - Resources" TextWrapping="Wrap" Foreground="{StaticResource myBrush}"/>
        </StackPanel>

    </Grid>
</Window>
